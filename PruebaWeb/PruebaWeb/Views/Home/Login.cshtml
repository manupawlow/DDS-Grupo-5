@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/login-styles.css" rel="stylesheet">
    <title></title>
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <h2>INGRESAR</h2>
            <div>
                @using (Html.BeginForm("LoginTry", "Home", FormMethod.Post))
                {
                    <input type="text" name="usuario" placeholder="Usuario" class="button button3">
                    <input type="password" name="contrasenia" placeholder="Clave" class="button button3">
                    <input type="submit" value="Ingresar" class="button button3">
                }
            </div>
            <div id="formFooter">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                {
                    <input type="submit" value="Crear una nueva cuenta">
                }
                <h6></h6>
                <a class="underlineHover" href="#">Olvido su contraseña?</a>
            </div>
        </div>
    </div>
</body>
</html>
